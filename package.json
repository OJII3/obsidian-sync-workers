{
	"name": "obsidian-sync-monorepo",
	"version": "0.1.0",
	"private": true,
	"description": "Obsidian sync server and plugin monorepo",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"prepare": "lefthook install",
		"dev:server": "bun run --cwd packages/server dev",
		"dev:plugin": "bun run --cwd packages/plugin dev",
		"build:server": "bun run --cwd packages/server deploy",
		"build:plugin": "bun run --cwd packages/plugin build",
		"typecheck:plugin": "bun run --cwd packages/plugin typecheck",
		"build": "bun run build:server && bun run build:plugin",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"check": "biome check --write .",
		"test": "bun test",
		"test:server": "bun run --cwd packages/server test"
	},
	"keywords": [
		"obsidian",
		"sync",
		"cloudflare-workers",
		"plugin"
	],
	"author": "",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"lefthook": "^2.0.13",
		"typescript": "^5.9.3"
	}
}
