{
  "name": "obsidian-sync-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Obsidian sync server and plugin monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:server": "npm run dev --workspace=packages/server",
    "dev:plugin": "npm run dev --workspace=packages/plugin",
    "build:server": "npm run deploy --workspace=packages/server",
    "build:plugin": "npm run build --workspace=packages/plugin",
    "build": "npm run build:server && npm run build:plugin"
  },
  "keywords": [
    "obsidian",
    "sync",
    "cloudflare-workers",
    "plugin"
  ],
  "author": "",
  "license": "MIT"
}
